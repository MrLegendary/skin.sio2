<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">666</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <include>BlackBackground</include>
        <control type="group">
            <control type="visualisation" id="2" description="Visualisation">
                <centerleft>960</centerleft>
                <top>780</top>
                <width>400</width>
                <height>200</height>
            </control>
            <control type="group">
                <visible>!Window.IsVisible(musicosd)</visible>
                <centerleft>960</centerleft>
                <top>170</top>
                <width>540</width>
                <animation condition="true" effect="zoom" center="auto" end="105" reversible="false">Conditional</animation>
                <control type="image">
                    <width>540</width>
                    <height>540</height>
                    <texture>$INFO[MusicPlayer.Cover]</texture>
                </control>
                <control type="label">
                    <top>550</top>
                    <height>40</height>
                    <width>540</width>
                    <align>center</align>
                    <font>size30B</font>
                    <label>$INFO[MusicPlayer.Title]</label>
                </control>
                <control type="textbox">
                    <top>590</top>
                    <height>60</height>
                    <width>540</width>
                    <align>center</align>
                    <font>font12</font>
                    <label>[B]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, -- ][/B]</label>
                </control>
            </control>
            <control type="progress" description="Progress Bar">
                <top>1000</top>
                <left>110</left>
                <width>1700</width>
                <height>10</height>
                <reveal>true</reveal>
                <texturebg border="4">Seekbar/ProgressBG.png</texturebg>
                <lefttexture border="4">Seekbar/ProgressL.png</lefttexture>
                <midtexture>Seekbar/ProgressM.png</midtexture>
                <righttexture border="4">Seekbar/ProgressR.png</righttexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>


        <control type="list">
            <top>800</top>
            <width>1920</width>
            <height>300</height>
            <orientation>horizontal</orientation>
            <itemlayout width="240" height="300">
                <control type="image">
                    <height>200</height>
                    <width>200</width>
                    <texture fallback="images/White.png">$INFO[ListItem.Icon]</texture>
                </control>
                <control type="label">
                    <top>210</top>
                    <width>200</width>
                    <height>20</height>
                    <textcolor>white</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout width="240" height="300">
                <control type="image">
                    <height>200</height>
                    <width>200</width>
                    <texture fallback="images/White.png">$INFO[ListItem.Icon]</texture>
                </control>
                <control type="label">
                    <top>210</top>
                    <width>200</width>
                    <height>20</height>
                    <textcolor>white</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
            <content>$INFO[MusicPlayer.Artist,musicdb://artists/]</content>
        </control>
    </controls>
</window>
