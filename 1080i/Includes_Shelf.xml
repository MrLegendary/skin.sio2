    <include name="Movies">
        <control type="panel" id="311" description="Movies Shelf Shortcuts">
            <include>ShelfFade</include>
            <visible>$EXP[311visibility]</visible>
            <onup>9009</onup>
            <ondown>9000</ondown>
            <onleft>311</onleft>
            <onright>311</onright>
            <include>MoviesShortcutsCommons</include>
            <content target="videos">$VAR[shelf]</content>
        </control>
    </include>
    <include name="Music">
        <control type="panel" id="312" description="TOP Shortcuts">
            <include>ShelfFade</include>
            <visible>$EXP[312visibility]</visible>
            <visible>String.IsEqual(Container(9000).ListItem.Property(defaultID),music)</visible>
            <include>SquareShortcutsCommons</include>
            <onclick>PlayMedia($ESCINFO[ListItem.DBID,musicdb://albums/,/])</onclick>
            <content target="music">$VAR[squareshelf]</content>
        </control>
    </include>
