<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="ShelfFade">
        <animation effect="fade" end="100" delay="200" time="220">Visible</animation>
        <animation effect="fade" end="0" time="100">Hidden</animation>
    </include>
    <include name="MoviesShortcutsCommons">
        <include>ShelfFade</include>
        <animation effect="slide" end="-100,0" time="250" condition="Container(311).Column(4)">Conditional</animation>
        <top>90</top>
        <width>2030</width>
        <height>630</height>
        <orientation>horizontal</orientation>
        <scrolltime>400</scrolltime>
        <itemlayout height="600" width="392">
            <control type="image">
                <visible>String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
                <left>90</left>
                <top>40</top>
                <width>350</width>
                <height>500</height>
                <texture fallback="DefaultVideoCover.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="image">
                <visible>!String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
                <left>90</left>
                <top>40</top>
                <width>350</width>
                <height>500</height>
                <texture fallback="DefaultVideoCover.png" background="true">$INFO[ListItem.Art(tvshow.poster)]</texture>
                <aspectratio>keep</aspectratio>
            </control>
        </itemlayout>
        <focusedlayout height="600" width="392">
            <control type="group">
                <animation effect="zoom" start="100" end="112" time="120" center="265,300" tween="Back" easing="Out">Focus</animation>
                <animation effect="zoom" start="112" end="100" time="120" center="265,300">unFocus</animation>
                <control type="image">
                    <animation effect="fade" start="0" end="100" time="150">Focus</animation>
                    <animation effect="fade" start="100" end="0" time="150">unFocus</animation>
                    <left>40</left>
                    <top>46</top>
                    <width>460</width>
                    <height>560</height>
                    <texture>shadow.png</texture>
                </control>
                <control type="image">
                    <visible>String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
                    <left>90</left>
                    <top>40</top>
                    <width>350</width>
                    <height>500</height>
                    <texture fallback="DefaultVideoCover.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
