<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="ShelfFade">
        <animation effect="fade" end="100" delay="200" time="220">Visible</animation>
        <animation effect="fade" end="0" time="100">Hidden</animation>
    </include>
    <include name="ShelfTitle">
        <animation condition="ControlGroup(700).HasFocus | Control.HasFocus(9009)" effect="zoom" start="100" end="110" time="120" center="325,200" tween="Back" easing="Out">Conditional</animation>
        <animation condition="!ControlGroup(700).HasFocus + !Control.HasFocus(9009)" effect="zoom" start="110" end="100" time="120" center="325,200">Conditional</animation>
        <left>80</left>
        <top>40</top>
        <height>45</height>
        <width>750</width>
        <align>left</align>
        <aligny>center</aligny>
        <font>size30</font>
        <textcolor>dimgray</textcolor>
    </include>
    <include name="MoviesShortcutsCommons">
        <include>ShelfFade</include>
        <animation effect="slide" end="-100,0" time="250" condition="Container(311).Column(4)">Conditional</animation>
        <top>90</top>
        <width>2030</width>
        <height>610</height>
        <orientation>horizontal</orientation>
        <scrolltime>400</scrolltime>
        <itemlayout height="600" width="380">
            <control type="image">
                <visible>String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
                <left>100</left>
                <top>16</top>
                <width>340</width>
                <height>500</height>
                <texture fallback="DefaultVideoCover.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="image">
                <visible>!String.IsEmpty(ListItem.Art(tvshow.poster))</visible>
                <left>100</left>
                <top>16</top>
                <width>340</width>
                <height>500</height>
                <texture fallback="DefaultVideoCover.png" background="true">$INFO[ListItem.Art(tvshow.poster)]</texture>
                <aspectratio>keep</aspectratio>
            </control>
        </itemlayout>
        <focusedlayout height="600" width="380">
            <control type="group">
                <animation effect="zoom" start="100" end="110" time="120" center="270,300" tween="Back" easing="Out">Focus</animation>
                <animation effect="zoom" start="110" end="100" time="120" center="270,300">unFocus</animation>
