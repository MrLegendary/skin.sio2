<window type="window" id="2000">
  <defaultcontrol always="false">3</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <include>OpenClose</include>
  <controls>
    
    <control type="group" description="Group 3 Plain list">
	<control type="image">
        <posx>250</posx>
        <posy>-100</posy>
        <width>1420</width>
        <height>1280</height>
        <texture border="150">images/Dialog.png</texture>
      </control>
	  <control type="label" id="1" description="Header label">
	  <posy>60</posy>
	  <width>1920</width>
	  <height>60</height>
	  <align>center</align>
	  <font>Size42B</font>
      <label></label>
    </control>
      <control type="group">
        <posx>500</posx>
        <posy>131</posy>
        <control type="list" id="3">
          <width>920</width>
          <height>888</height>
          <onleft>5</onleft>
          <onright>60</onright>
          <onup>3</onup>
          <ondown>3</ondown>
          <pagecontrol>60</pagecontrol>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <itemlayout width="920" height="81">
            <control type="label" description="Main Label">
			  <font>Size30</font>
			  <width>825</width>
              <include>52MainLabel</include>
              <selectedcolor>Yellow</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <focusedlayout width="920" height="81">
		  <control type="image">
		  <width>920</width>
		  <height>81</height>
		  <texture border="20">images/Buttonselect.png</texture>
		  </control>
            <control type="label" description="Main Label">
			  <font>Size30</font>
			  <width>825</width>
              <include>52MainLabelFO</include>
              <selectedcolor>Yellow</selectedcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </focusedlayout>
        </control>
      </control>
    </control>
    <control type="group" description="Group 6 Thumbs">
	<visible>Control.HasFocus(6) | Control.HasFocus(5)</visible>
	<include>BlackBackground</include>
      <control type="group" description="Slider and List">
        <posx>1020</posx>
        <posy>140</posy>
        <control type="list" id="6">
          <width>802</width>
          <height>886</height>
          <onleft>5</onleft>
          <onright>60</onright>
          <onup>6</onup>
          <ondown>6</ondown>
          <pagecontrol>60</pagecontrol>
          <movement>3</movement>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <itemlayout width="802" height="111">
            <include>ListBG</include>
            <control type="image">
              <height>111</height>
              <width>111</width>
              <bordersize>6</bordersize>
              <texture>$INFO[ListItem.Icon]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <include>50Title</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <include>50details</include>
              <label>$INFO[ListItem.Label2]</label>
            </control>
            <control type="image">
              <visible>ListItem.IsSelected</visible>
              <posx>735</posx>
              <posy>0</posy>
              <height>111</height>
              <width>48</width>
              <bordersize>6</bordersize>
              <texture>images/RadioON.png</texture>
              <aspectratio>keep</aspectratio>
            </control>
          </itemlayout>
          <focusedlayout width="802" height="111">
            <include>ListBG</include>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <height>111</height>
              <width>111</width>
              <bordersize>6</bordersize>
              <texture>$INFO[ListItem.Icon]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <include>50TitleFO</include>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Label2">
              <include>50detailsFO</include>
              <label>$INFO[ListItem.Label2]</label>
            </control>
            <control type="image">
              <visible>ListItem.IsSelected</visible>
              <posx>735</posx>
              <posy>0</posy>
              <height>111</height>
              <width>48</width>
              <bordersize>6</bordersize>
              <texture>images/RadioON.png</texture>
              <aspectratio>keep</aspectratio>
            </control>
          </focusedlayout>
        </control>
        <control type="group" description="Slider">
          
          <animation condition="Control.HasFocus(60)" effect="zoom" start="100" end="0" time="300" reversible="true">Conditional</animation>
          <control type="group">
            <visible>Container(6).HasFocus() + !Control.HasFocus(5)</visible>
            <include>Slider2</include>
          </control>
          <animation type="Conditional" condition="Control.HasFocus(9001) | ControlGroup(9000).HasFocus()">
            <effect type="fade" start="100" end="40" time="0" reversible="true" />
          </animation>
          <animation condition="Container(6).Position(0)" effect="slide" start="0,0" end="0,-333" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(1)" effect="slide" start="0,0" end="0,-222" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(2)" effect="slide" start="0,0" end="0,-111" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(3)" effect="slide" start="0,0" end="0,0" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(4)" effect="slide" start="0,0" end="0,111" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(5)" effect="slide" start="0,0" end="0,222" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(6)" effect="slide" start="0,0" end="0,333" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(7)" effect="slide" start="0,0" end="0,444" time="180" easing="inout" reversible="true">Conditional</animation>
          <animation condition="Container(6).Position(8)" effect="slide" start="0,0" end="0,555" time="180" easing="inout" reversible="true">Conditional</animation>
        </control>
      </control>
    </control>
    <control type="group" description="Thumbs">
      <posx>270</posx>
      <posy>315</posy>
      <control type="image" description="Item Thumb">
        <width>450</width>
        <height>450</height>
        <fadetime>200</fadetime>
        <texture>$INFO[Container(6).ListItem.Icon]</texture>
        <aspectratio>keep</aspectratio>
      </control>
    </control>
    <control type="group" description="Button 5">
      <!--<control type="image" description="Fake button for control 5">
        <visible>Control.HasFocus(5)</visible>
        <animation effect="fade" time="100">VisibleChange</animation>
        <posx>150</posx>
        <posy>117</posy>
        <width>675</width>
        <height>148</height>
        <texture border="32">images/slider.png</texture>
        <aspectratio>stretch</aspectratio>
      </control>-->
      <control type="button" id="5" description="Manual Get more button">
        <posx>68</posx>
        <posy>113</posy>
        <height>165</height>
        <width>855</width>
        <texturefocus border="32">images/slider.png</texturefocus>
        <font>size36</font>
        <label>-</label>
        <onleft>3</onleft>
        <onright>3</onright>
        <onup>3</onup>
        <ondown>3</ondown>
      </control>
      <control type="image" description="loopnf">
        <visible>Control.IsVisible(5)</visible>
        <animation effect="fade" time="100">VisibleChange</animation>
        <posx>120</posx>
        <posy>155</posy>
        <width>48</width>
        <height>81</height>
        <texture>images/loop.png</texture>
        <colordiffuse>BBFFFFFF</colordiffuse>
        <aspectratio>keep</aspectratio>
      </control>
      <control type="image" description="loop">
        <visible>Control.HasFocus(5)</visible>
        <animation effect="fade" time="100">VisibleChange</animation>
        <posx>120</posx>
        <posy>155</posy>
        <width>48</width>
        <height>81</height>
        <texture>images/loop.png</texture>
        <aspectratio>keep</aspectratio>
      </control>
	  
    </control>
	 
    <control type="scrollbar" id="60">
        <posx>39r</posx>
        <posy>135</posy>
        <height>870</height>
        <onleft>3</onleft>
        <onright>-</onright>
      </control>
  </controls>
</window>
